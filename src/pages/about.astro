  </section>

  <!-- Real Life Scenarios Section -->
  <section class="section-padding bg-gradient-to-br from-gray-50 to-emerald-50 relative overflow-hidden">
    <div class="absolute inset-0">
      <div class="absolute top-20 left-20 w-32 h-32 bg-emerald-100 rounded-full blur-3xl opacity-60 animate-float"></div>
      <div class="absolute bottom-20 right-20 w-40 h-40 bg-teal-100 rounded-full blur-3xl opacity-60 animate-float" style="animation-delay: 2s"></div>
    </div>
    
    <div class="max-w-7xl mx-auto relative z-10">
      <div class="text-center mb-16 animate-fade-in">
        <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
          Real Life Scenarios
        </h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          See how Finsplore helps with the financial goals that matter most to you
        </p>
      </div>
      
      <div class="grid md:grid-cols-2 gap-8 max-w-5xl mx-auto">
        {[
          {
            title: "Buying your first home",
            icon: "ðŸ ",
            color: "emerald",
            delay: "0ms"
          },
