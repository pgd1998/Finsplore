        ].map((scenario, index) => (
          <div key={index} class="modern-card p-8 group hover:scale-105 transition-all duration-300 animate-slide-up" style={`animation-delay: ${scenario.delay}`}>
            <div class="flex items-center space-x-4">
              <div class={`w-16 h-16 bg-gradient-to-r from-${scenario.color}-500 to-${scenario.color}-600 rounded-2xl flex items-center justify-center text-2xl group-hover:scale-110 transition-transform duration-300`}>
                {scenario.icon}
              </div>
              <div class="flex items-center space-x-3">
                <svg class={`w-6 h-6 text-${scenario.color}-500`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
