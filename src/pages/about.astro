    <!-- Background pattern -->
    <div class="absolute inset-0 bg-mesh opacity-50"></div>
    
    <div class="max-w-7xl mx-auto relative z-10">
      <div class="text-center mb-16 animate-fade-in">
        <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
